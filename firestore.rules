rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regras para a coleção de usuários
    match /users/{userId} {
      
      // Usuário pode criar seu próprio documento ao se registrar
      allow create: if request.auth != null && request.auth.uid == userId;

      // Usuário pode ler e atualizar seu próprio documento
      allow read, update: if request.auth != null && request.auth.uid == userId;
      
      // Restringe a criação do campo "role" diferente de "user" para admins
      allow update: if request.auth != null &&
                    request.auth.uid == userId &&
                    !(request.resource.data.role != 'user' && request.auth.token.role != 'admin');
    }
  }
}